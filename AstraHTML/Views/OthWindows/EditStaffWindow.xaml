            <TextBlock Text="Name"/>
            <TextBox Text=""/>
            <TextBlock Text="Surname"/>
            <TextBox Text=""/>
            <TextBlock Text="Speciality"/>
            <ComboBox Text=""/>
            <TextBlock Text="Post"/>
            <TextBox Text=""/>
            <TextBlock Text="Salary"/>
            <TextBox Text=""/>
            <TextBlock Text="Login"/>
            <TextBox Text=""/>
            <TextBlock Text="Password"/>
            <TextBox Text=""/>
        </StackPanel>
        <Button Grid.Row="1" Content="Add"/>
    </Grid>
</Window>
