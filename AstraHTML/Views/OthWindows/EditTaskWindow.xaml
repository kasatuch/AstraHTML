<Window x:Class="AstraHTML.Views.OthWindows.EditTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AstraHTML.Views.OthWindows"
        mc:Ignorable="d"
        Title="EditTaskWindow" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Vertical" Width="200"
                    HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Name"/>
            <TextBox Text=""/>
            <TextBlock Text="Description"/>
            <TextBox Text=""/>
            <TextBlock Text="Project"/>
            <ComboBox/>
            <TextBlock Text="Developer"/>
            <ComboBox/>
            <TextBlock Text="Priority"/>
            <ComboBox/>
        </StackPanel>
        <Button Grid.Row="1" Content="Add"/>
    </Grid>
</Window>
