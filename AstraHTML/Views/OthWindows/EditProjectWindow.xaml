<Window x:Class="AstraHTML.Views.OthWindows.EditProjectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AstraHTML.Views.OthWindows"
        mc:Ignorable="d"
        Title="EditProjectWindow" Height="300" Width="300"
        Name = "EditNewProjectWnd">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Vertical" Width="200"
                    HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Title"/>
            <TextBox x:Name="TitleBlock" Text=""/>
            <TextBlock Text="Client"/>
            <TextBox Text=""/>
        </StackPanel>
        <Button Grid.Row="1" Content="Add" Command="{Binding EditNewProject}"
                CommandParameter="{Binding ElementName=EditNewProjectWnd}"/>
    </Grid>
</Window>
